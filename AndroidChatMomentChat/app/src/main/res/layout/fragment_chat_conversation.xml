<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/singleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:background="@drawable/receivertosender_audio"
            android:paddingLeft="10dip"
            android:textColor="@android:color/primary_text_light" />

        <Button android:text="Picture"
            android:id="@+id/button_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#F44336"
            android:layout_centerHorizontal="true">
        </Button>
        <Button android:text="Video"
            android:id="@+id/button_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#3F51B5"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button_picture"
            android:layout_toStartOf="@+id/button_picture">
        </Button>
        <Button android:text="Audio"
            android:id="@+id/button_audio"
            android:layout_width="wrap_content"
            android:background="#f1c40f"
        android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/button_picture"
            android:layout_toEndOf="@+id/button_picture">
        </Button>
    </RelativeLayout>
</LinearLayout>